<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">

<extension version="2.5" type="template" method="upgrade">
	
	<name>templatename</name><!-- name the template -->
	<creationDate>xxxx-xx-xx</creationDate><!-- the date your are beginn to code -->
	<author>your name</author><!-- your name (oops, I repeat myself) -->
	<copyright>Copyright Â© xxxx example.com</copyright><!-- for who you are coding -->
	<authorEmail>your.name@example.com</authorEmail><!-- your email address -->
	<authorUrl>http://www.example.com</authorUrl><!-- your url -->
	<version>1.0.0</version><!-- give your template a number -->
	<description><![CDATA[ 
		<h1>templatename</h1>
		<p><img src="../templates/templatename/template_preview.png" /></p>
		<h2>Module positions</h2>
		<ol>
			<li>debug</li>
		</ol>
		<p>Created by <a href="http://www.example.com" target="_blank">your name | example.com</a>.</p>
	]]></description><!-- change the description as you like -->
	
	<files><!-- no need to change -->
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>apple-touch-icon-57x57.png</filename>
		<filename>apple-touch-icon-72x72.png</filename>
		<filename>apple-touch-icon-114x114.png</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>
	
	<languages folder="language"><!-- no need to change -->
		<language tag="de-DE">de-DE.tpl_templatename.ini</language>
		<language tag="en-GB">en-GB.tpl_templatename.ini</language>
	</languages>
	
	<positions><!-- define the positions for modules here -->
		<position>debug</position>
	</positions>
	
	<config><!-- no need to change -->
		<fields name="params">
			<fieldset name="basic">
			<!-- CSS Compressor-->
  				<field name="compressor" type="radio" default="1" label="TPL_TEMPLATENAME_PARAMETER_COMPRESSOR_LABEL" description="TPL_TEMPLATENAME_PARAMETER_COMPRESSOR_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
			<!-- MODERNIZR-->
				<field name="modernizr" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_MODERNIZR_LABEL" description="TPL_TEMPLATENAME_PARAMETER_MODERNIZR_DESC">
					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
		    <!-- BOOTSTRAP-->
  		    	<field name="bootstrap" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_BOOTSTRAP_LABEL" description="TPL_TEMPLATENAME_PARAMETER_BOOTSTRAP_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
			<!-- LESS-->
  				<field name="less" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_LESS_LABEL" description="TPL_TEMPLATENAME_PARAMETER_LESS_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
  				<field name="lessusage" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_LESSUSAGE_LABEL" description="TPL_TEMPLATENAME_PARAMETER_LESSUSAGE_DESC">
  					<option value="0">TPL_TEMPLATENAME_PARAMETER_LESSUSAGE_CLIENT</option>
  					<option value="1">TPL_TEMPLATENAME_PARAMETER_LESSUSAGE_SERVER</option>
  				</field>
			<!-- PIE-->
  				<field name="pie" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_PIE_LABEL" description="TPL_TEMPLATENAME_PARAMETER_PIE_DESC">
  					<option value="0">JNO</option>
  					<option value="1">JYES</option>
  				</field>
			</fieldset>
			<fieldset name="advanced">
			<!-- Disable JavaScript -->	
				<field name="disablejs" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_DISABLEJS_LABEL" description="TPL_TEMPLATENAME_PARAMETER_DISABLEJS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			<!-- JavaScript Files -->
				<field name="fnjs" type="textarea" label="TPL_TEMPLATENAME_PARAMETER_FNJS_LABEL" description="TPL_TEMPLATENAME_PARAMETER_FNJS_LABEL" cols="30" default="mootools-core.js,caption.js" rows="4" />
			<!-- Disable CSS -->
				<field name="disablecss" type="radio" default="0" label="TPL_TEMPLATENAME_PARAMETER_DISABLECSS_LABEL" description="TPL_TEMPLATENAME_PARAMETER_DISABLECSS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
				</field>
			<!-- CSS Files -->
				<field name="fncss" type="textarea" label="TPL_TEMPLATENAME_PARAMETER_FNCSS_LABEL" description="TPL_TEMPLATENAME_PARAMETER_FNCSS_DESC" cols="30" rows="4" />
			</fieldset>
		</fields>
	</config>
	
</extension>
